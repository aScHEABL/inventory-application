<%# views/index.ejs %>

<% extend('layout') %>

<section class="hero min-h-[calc(100vh-5rem)] grid-cols-2" style="background-image: url(https://source.unsplash.com/P3pI6xzovu0);">
    <div class="hero-overlay bg-opacity-40 col-span-full"></div>
    <div class="hero-content text-neutral-content col-start-2">
    <div class="max-w-xl">
        <h1 class="mb-5 text-5xl font-bold text-white">Fashion straight to your doorstep</h1>
        <p class="mb-5 text-2xl text-white">Get yourself fashionified without leaving your home</p>
        <input class="btn btn-secondary btn-lg bg-white bg-slate-400 hover:bg-slate-300 rounded-md" type="button" onclick="location.href='/shop';" value="Shop Now" />
    </div>
    </div>
</section>

<h1 class="m-5 text-5xl text-white text-center">Featured Products</h1>

<section>
  <ul class="flex justify-center gap-8">
    <% for (let i = 0; i < clothing_array.length; i++) { %>
      <li class="tooltip tooltip-success" data-tip="<%= clothing_array[i].name %>">
        <a href="<%= clothing_array[i].url %>">
          <img class="w-[20rem]" src="<%= clothing_array[i].imageURL %>" />
        </a>
      </li>
    <% } %>
  </ul>
</section>